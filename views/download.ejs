<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Download Files</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Download Files</h1>
    
    <% if (error) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>
    
    <% if (files && files.length > 0) { %>
      <div class="file-list">
        <h2>Available Files:</h2>
        <% files.forEach(function(file) { %>
          <div class="file-item">
            <div class="file-info">
              <span class="file-name"><%= file.originalName %></span>
              <div class="file-meta">
                <span class="file-type"><%= file.mimetype %></span>
                <span class="file-size"><%= (file.size / 1024).toFixed(2) %> KB</span>
                <span class="file-date">Uploaded: <%= new Date(file.uploadDate).toLocaleString() %></span>
              </div>
            </div>
            <a href="/download/<%= file.filename %>" class="download-btn">Download</a>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="empty-message">
        <p>No files available for download. Please upload some files first.</p>
      </div>
    <% } %>
    
    <a href="/" class="nav-link">← Back to Home</a>
    <a href="/upload" class="nav-link">Go to Upload →</a>
  </div>
</body>
</html> 